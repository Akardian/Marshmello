# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
tab_width = 4

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
max_line_length = 100
indent_style = tab
indent_size = 4
tab_width = 4

# JSON files
[*.json]
indent_style = tab
indent_size = 4
tab_width = 4

# HTML files
[*.html]
indent_style = tab
indent_size = 4
tab_width = 4
in

# CSS and SCSS files
[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
tab_width = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 4
tab_width = 4

# Package.json
[package.json]
indent_style = tab
indent_size = 4
tab_width = 4